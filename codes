pragma solidity ^0.8.13;

contract StudentScores {

    address public student;
    uint public totalScore;
    uint public subjectCount;

    constructor() {
        student = msg.sender;
        totalScore = 0;
        subjectCount = 0;
    }

    modifier onlyStudent() {
        require(msg.sender == student, "Only the student can call this function");
        _;
    }

    function addScore(uint _score) public onlyStudent {
        require(_score > 0 && _score <= 100, "Score must be between 1 and 100");
        totalScore += _score;
        subjectCount += 1;
    }

    function averageScore() public view returns (uint) {
        require(subjectCount > 0, "No subjects added yet");
        return totalScore / subjectCount;
    }

    function resetScores() public onlyStudent {
        totalScore = 0;
        subjectCount = 0;
    }
}

